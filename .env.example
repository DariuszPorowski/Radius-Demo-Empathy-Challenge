# Copy to .env and fill in values.
# Taskfile.yml loads .env automatically.

# Azure Service Principal used by Radius
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# Azure bootstrap inputs
RG_LOCATION=eastus2
SP_NAME=radius-demo-sp
ROLE=Contributor
CREATE_AKS=false
GET_AKS_CREDENTIALS=true
AKS_CLUSTER_NAME=radius-demo-aks
AKS_NODE_COUNT=1
AKS_NODE_VM_SIZE=Standard_DS2_v2

# Recipe module path/source
POSTGRES_RECIPE_TEMPLATE_PATH=./radius/recipes/azure/postgresql-flex/terraform

# Azure scopes (resource group IDs)
COMMERCIAL_AZURE_SCOPE=
RETAIL_AZURE_SCOPE=
OPERATIONS_ACI_RG_ID=

# Demo defaults
WORKSPACE=demo
STAGE=dev
KUBE_CONTEXT=
APP_NAME=todo-app
IMAGE=ghcr.io/radius-project/samples/demo:latest
CONTAINER_PORT=3000

# Optional behavior toggles
SKIP_RADIUS_INSTALL=false
REINSTALL_RADIUS=false
SKIP_AZURE_CREDENTIAL=false
SKIP_RESOURCE_TYPE=false
